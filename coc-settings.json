{
  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": true,
  "coc.preferences.formatOnSaveFiletypes": ["go", "rust", "typescript", "json", "javascript", "sh", "terraform"],
  "go.goplsOptions": {
    "staticcheck": true
  },
  "typescript.format.enabled": false,
  "javascript.format.enabled": false,
  "rust-client.enable": false,
  "yaml.customTags": [
          "!Ref",
          "!GetAtt",
          "!FindInMap sequence",
          "!FindInMap scalar",
          "!GetAtt",
          "!GetAZs",
          "!Cidr",
          "!ImportValue",
          "!Join sequence",
          "!Select",
          "!Split",
          "!Sub sequence",
          "!Sub scalar",
          "!And",
          "!Equals",
          "!If",
          "!Not",
          "!Or"
      ],
  "rust-analyzer.checkOnSave.command": "cargo clippy",
  "languageserver": {
     "golang": {
       "command": "gopls",
       "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
       "filetypes": ["go"],
       "initializationOptions": {
         "usePlaceholders": true
       }
     },
     "terraform": {
         "command": "terraform-ls",
         "args": ["serve"],
         "filetypes": [
             "terraform",
             "tf"
         ],
         "initializationOptions": {},
         "settings": {}
     }
  },
  "diagnostic-languageserver.linters": {
    "golangci-lint": {
      "command": "golangci-lint",
      "rootPatterns": [ ".git", "go.mod" ],
      "debounce": 100,
      "args": [ "run", "--out-format", "json" ],
      "sourceName": "golangci-lint",
      "parseJson": {
        "sourceName": "Pos.Filename",
        "sourceNameFilter": true,
        "errorsRoot": "Issues",
        "line": "Pos.Line",
        "column": "Pos.Column",
        "message": "${Text} [${FromLinter}]",
      }
    }
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck",
    "php": ["phpcs", "phpstan"],
    "go": ["golangci-lint"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "graphql.filetypes": ["graphql"],
  "intelephense.environment.phpVersion": "8.1.0"
}
